<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbt.hudat.EditGroup">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <GridLayout
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:columnCount="1"
            android:rowCount="14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Space
                android:id="@+id/pre"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_row="0" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Edit Group"
                android:textSize="30sp" />

            <Space
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_row="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_weight="1"
                    android:onClick="chooseImage"
                    android:src="@android:drawable/ic_menu_camera"
                    app:civ_border_color="#FFFFFFFF"
                    app:civ_border_width="4dp" />

                <EditText
                    android:id="@+id/instruction"
                    android:layout_width="228dp"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Group Name"
                    android:inputType="textPersonName"
                    android:text=""
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.807"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </LinearLayout>

            <Space
                android:id="@+id/name_description"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_row="4" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:ems="10"
                android:hint="Short description about the group"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/charCount"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="0/80"
                android:textAlignment="textEnd"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:id="@+id/description_done"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="6" />

            <TextView
                android:id="@+id/passcode_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passcode is required for users to join."
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <EditText
                android:id="@+id/passcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Creative Passcode"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Passcode Hint (Optional)"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="13"
                android:background="@drawable/round"
                android:onClick="editGroup"
                android:text="Done"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </GridLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>

