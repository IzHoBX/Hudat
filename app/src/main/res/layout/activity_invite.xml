<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbt.hudat.invite">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="576dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:text="Invite your friends! We will send them the passcode. "
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignTop="@+id/circleImageView"
            android:layout_marginEnd="27dp"
            android:onClick="messenger"
            android:src="@drawable/messenger" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginStart="27dp"
            android:layout_marginTop="52dp"
            android:onClick="whatsapp"
            android:src="@drawable/whatsapp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView4"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignStart="@+id/circleImageView3"
            android:layout_alignTop="@+id/circleImageView2"
            android:src="@drawable/more" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignStart="@+id/circleImageView"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="41dp"
            android:onClick="telegram"
            android:src="@drawable/telegram" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/circleImageView2"
            android:layout_below="@+id/circleImageView"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            android:text="Whatsapp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/circleImageView3"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginEnd="14dp"
            android:text="Messenger" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/circleImageView2"
            android:layout_marginTop="13dp"
            android:text="Telegram" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignTop="@+id/textView5"
            android:text="More" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:background="@drawable/round_white"
            android:onClick="done"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="25sp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
