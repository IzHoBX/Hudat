<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbt.hudat.welcome">

    <com.luolc.emojirain.EmojiRainLayout
        android:id="@+id/group_emoji_container"
        android:layout_width="368dp"
        android:layout_height="576dp"
        app:dropDuration="2400"
        app:dropFrequency="500"
        app:duration="3600000"
        app:per="10"
        tools:context="com.luolc.emojirain.sample.MainActivity"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    </com.luolc.emojirain.EmojiRainLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="10"
        android:rowCount="13"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:id="@+id/space0"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_weight="0.00" />

        <Space
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="62dp"
            android:layout_row="3"
            android:text="WELCOME TO HUDAT"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="57dp"
            android:layout_row="5"
            android:text="Chat anonymously with&#10;someone you know"
            android:textSize="19sp" />

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_weight="0.01" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_column="1"
            android:layout_marginLeft="50dp"
            android:layout_row="7"
            android:layout_weight="0.00"
            android:background="@drawable/round"
            android:onClick="signUp"
            android:text="Sign up "
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_column="1"
            android:layout_row="8" />

        <TextView
            android:id="@+id/logIn"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_marginLeft="85dp"
            android:layout_row="9"
            android:gravity="center_vertical"
            android:text="Log in"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="480dp" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>
